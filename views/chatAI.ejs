		<script>
			const token_jwt = localStorage.getItem('token');

			function getUserDataFromToken() {
				if (!token_jwt) {
					return null;
				}

				if (typeof jwt_decode === 'function') {
					try {
						const decodedToken = jwt_decode(token_jwt);
						return {
							email: decodedToken.sub,
							role: decodedToken.role,
							username: decodedToken.userName,
							userId: decodedToken.userUuid
						};
					} catch (error) {
						console.error("Error decoding token:", error);
						return null;
					}
				} else {
					console.error("jwt_decode is not defined");
					return null;
				}
			}
			const userData = getUserDataFromToken();
			
			if (userData && userData.username) {
				document.getElementById("greeting").textContent = `Halo, ${userData.username}`;
			}
			const sidebar = document.getElementById('default-sidebar');
			const closeButton = document.getElementById('toggle-sidebar');
			const sidebarContentWrapper = document.querySelector('.sidebar-content-wrapper')
			const mainContent = document.querySelector('#main-content')

			// Add event listener to close button to minimize the sidebar
			closeButton.addEventListener('click', () => {
				sidebar.classList.toggle('minimized');
				sidebar.classList.toggle('hidden');
				sidebarContentWrapper.classList.toggle('minimized')
				// mainContent.classList.toggle('xl:ml-[8rem]')
				// mainContent.classList.toggle('md:ml-[6rem]')
			});
			document.addEventListener("DOMContentLoaded", function () {
				const newChatBtn = document.getElementById("new-chat-btn");
				const sendBtn = document.getElementById("send-btn");
				const messageInput = document.getElementById("message-input");
				const chatBox = document.getElementById("chat-box");
				const greetingSection = document.querySelector(".greeting-section");
				const chatList = document.getElementById("chat-list");
				const chatRecomSection = document.querySelector(".chat-recom");
				const showMoreBtn = document.getElementById("show-more-btn");
				const showLessBtn = document.getElementById("show-less-btn");
				const alertPopup = document.getElementById("alert-popup");

				let chats = [];

				let messageCount = 0;
				let currentChatIndex = null;
				const maxVisibleChats = 4;
				let chatCounter = 2;
				let isShowingMore = false;

				// Fungsi untuk merender daftar chat
				function renderChatList() {
					chatList.innerHTML = '';

					chats.forEach((chat, index) => {
						const li = document.createElement('li');
						li.className = 'relative';
						const a = document.createElement('a');
						a.href = '#';
						a.className = 'chat-item dark:hover:bg-white/10 hover:bg-black/10 block p-3 rounded-md cursor-pointer flex justify-between items-center';
						a.dataset.chatIndex = index;
						a.textContent = chat.name;
						a.addEventListener('click', function (e) {
							e.preventDefault();
							const chatIndex = parseInt(this.dataset.chatIndex);
							switchToChat(chatIndex);
						});

						const ellipsisButton = document.createElement('button');
						ellipsisButton.className = 'ml-2 text-gray-500 bg-transparent border-none focus:outline-none flex items-center';
						ellipsisButton.innerHTML = '...';
						ellipsisButton.style.fontSize = '1.25rem';
						ellipsisButton.style.cursor = 'pointer';
						ellipsisButton.addEventListener('click', function (e) {
							e.stopPropagation();
							toggleDropdown(index);
						});

						a.appendChild(ellipsisButton);

						const dropdownMenu = document.createElement('div');
						dropdownMenu.className = 'absolute border bg-gray-500 right-0 top-full mt-2 w-32 text-white shadow-lg rounded-lg p-2 hidden';
						dropdownMenu.id = `dropdown-${index}`;

						const optionRename = document.createElement('div');
						optionRename.className = 'p-2 hover:bg-gray-100 cursor-pointer';
						optionRename.textContent = 'Ubah Nama';
						optionRename.addEventListener('click', function () {
							// Buat elemen input sementara di sebelah teks
							const input = document.createElement('input');
							input.type = 'text';
							input.value = chat.name; // Set nilai input ke nama chat saat ini
							input.className = 'p-2 border-none bg-transparent outline-none'; // Tambahkan style transparan dan border-none
							
							// Sesuaikan lebar input dengan panjang teks
							input.style.width = `${chat.name.length + 1}ch`; // `+1` untuk spasi tambahan
							
							// Ganti teks dengan input tanpa mengosongkan elemen `a`
							a.innerHTML = ''; // Kosongkan konten `a`
							a.appendChild(input); // Sisipkan input ke dalam `a`
							input.focus(); // Fokuskan ke input untuk mulai mengedit

							// Event ketika input kehilangan fokus atau pengguna menekan "Enter"
							input.addEventListener('blur', function () {
								chat.name = input.value; // Simpan nama baru ke dalam data
								a.textContent = chat.name; // Tampilkan nama baru di UI

								// Tambahkan kembali tombol ellipsis setelah mengganti teks
								a.appendChild(ellipsisButton);
							});

							input.addEventListener('keydown', function (e) {
								if (e.key === 'Enter') {
									input.blur(); // Simpan dan keluar dari edit mode saat "Enter" ditekan
								}
							});
						});
						dropdownMenu.appendChild(optionRename);
						
						const optionDelete = document.createElement('div');
						optionDelete.className = 'p-2 hover:bg-gray-100 cursor-pointer';
						optionDelete.textContent = 'Hapus';
						optionDelete.addEventListener('click', function () {
							const confirmDelete = confirm("Are you sure you want to delete this chat?");
							if (confirmDelete) {
								chats.splice(index, 1); // Hapus chat dari daftar
								currentChatIndex = null; // Reset index chat aktif
								
								renderChatList(); // Render ulang daftar chat
								
								// Bersihkan isi chat dan tampilkan bagian greeting
								chatBox.innerHTML = ''; // Kosongkan chat box
								greetingSection.classList.remove('hidden'); // Tampilkan greeting
							}
						});
						dropdownMenu.appendChild(optionDelete);

						// Sembunyikan chat jika show less aktif dan melebihi batas 4 chat
						if (index >= maxVisibleChats && !isShowingMore) {
							li.classList.add('hidden');
						}

						li.appendChild(a);
						li.appendChild(dropdownMenu); 
						chatList.appendChild(li);
					});


					// Jika ada lebih dari maxVisibleChats, tampilkan tombol show more
					if (chats.length > maxVisibleChats) {
						if (isShowingMore) {
							showMoreBtn.classList.add('hidden');
							showLessBtn.classList.remove('hidden');
						} else {
							showMoreBtn.classList.remove('hidden');
							showLessBtn.classList.add('hidden');
						}
					} else {
						showMoreBtn.classList.add('hidden');
						showLessBtn.classList.add('hidden');
					}
				}

				function toggleDropdown(index) {
					const dropdown = document.getElementById(`dropdown-${index}`);
					if (dropdown) {
						dropdown.classList.toggle('hidden');
					}
				}

				document.addEventListener('click', function (event) {
					chats.forEach((_, index) => {
						const dropdown = document.getElementById(`dropdown-${index}`);
						if (dropdown && !dropdown.contains(event.target) && !event.target.closest('.text-gray-500')) {
							dropdown.classList.add('hidden');
						}
					});
				});

				// Logika untuk tombol show more
				showMoreBtn.addEventListener('click', () => {
					isShowingMore = true; // Aktifkan mode show more
					const hiddenChats = document.querySelectorAll('#chat-list li.hidden');
					hiddenChats.forEach(hiddenChat => {
						hiddenChat.classList.remove('hidden');
					});
					showMoreBtn.classList.add('hidden');
					showLessBtn.classList.remove('hidden');
				});

				// Logika untuk tombol show less
				showLessBtn.addEventListener('click', () => {
					isShowingMore = false; // Nonaktifkan mode show more
					const allChats = document.querySelectorAll('#chat-list li');

					allChats.forEach((chat, index) => {
						if (index >= maxVisibleChats) {
							chat.classList.add('hidden');
						}
					});

					showLessBtn.classList.add('hidden');
					showMoreBtn.classList.remove('hidden');
				});

				// Fungsi untuk berpindah chat
				function switchToChat(chatIndex) {
					if (chatIndex < 0 || chatIndex >= chats.length) {
						console.error(`Chat dengan index ${chatIndex} tidak ditemukan.`);
						chatBox.innerHTML = '';
						greetingSection.classList.remove('hidden');
						return;
					}
					currentChatIndex = chatIndex;
					const selectedChat = chats[currentChatIndex];

					chatBox.innerHTML = '';
					selectedChat.messages.forEach(message => {
						const messageDiv = document.createElement('div');
						const classes = message.sender === 'user' ?
							'bg-[#ffcc00] text-black self-end text-right' :
							'bg-[#2b2b2b] text-[#e0e0e0] self-start text-left';
						messageDiv.classList.add(...classes.split(' '),
							'hover:shadow-md', 'p-4', 'rounded-md', 'max-w-xs', 'w-fit', 'shadow-lg', 'transition-all', 'duration-300');
						messageDiv.textContent = message.text;
						chatBox.appendChild(messageDiv);
					});

					document.querySelectorAll('.chat-item').forEach(item => {
						if (parseInt(item.dataset.chatIndex) === currentChatIndex) {
							item.classList.add('active-chat');
						} else {
							item.classList.remove('active-chat');
						}
					});

					chatBox.scrollTop = chatBox.scrollHeight;

					if (selectedChat.messages.length > 0) {
						greetingSection.classList.add('hidden');
					} else {
						greetingSection.classList.remove('hidden');
					}
				}

				// Fungsi untuk membuat chat baru
				async function createNewChat() {
					const chatId = `chat-${Date.now()}`;
					const chatName = `Percakapan ${chatCounter++}`;
					const newChat = {
						name: chatName,
						messages: []
					};
					chats.push(newChat);
					renderChatList();
					switchToChat(chats.length - 1); 
					if (!userData) {
						console.error("User not authenticated.");
						return;
					}
				}

				async function sendMessage(messageText = '') {
					if (messageText === '') {
						messageText = messageInput.value.trim();
					}

					if (messageText === '') return;

					if (currentChatIndex === null) {
						await createNewChat();
					}
					const selectedChat = chats[currentChatIndex];
					if (!selectedChat) {
						console.error(`Chat with index ${currentChatIndex} not found.`);
						return;
					}

					// Add the user message to the selected chat
					const userMessage = {
						sender: 'user',
						text: messageText
					};
					selectedChat.messages.push(userMessage);

					if (selectedChat.messages.length === 1) {
						selectedChat.name = messageText; 
						renderChatList(); 
					}
					if (!selectedChat.historyId) {
						try {
							const response = await fetch('/histories', {
								method: 'POST',
								headers: {
									'Content-Type': 'application/json',
									'Authorization': token_jwt
								},
								body: JSON.stringify({
									historyName: messageText,
									status: "ACTIVE",
									userId: userData.userId,
									token: token_jwt
								})
							});

							if (!response.ok) {
								throw new Error("Failed to save chat to server. Status: " + response.status);
							}

							const data = await response.json();
							selectedChat.historyId  = data.id;
						} catch (error) {
							console.error("Error saving chat to server:", error);
						}
					}
					const userMessageDiv = document.createElement('div');
					userMessageDiv.classList.add('bg-gray-200', 'text-black', 'self-end', 'text-justify', 'leading-relaxed', 'max-w-xl', 'p-4', 'rounded-md', 'w-fit', 'shadow-xl', 'mb-3', 'border-[#2b2b2b]', 'border');
					userMessageDiv.textContent = messageText;
					chatBox.appendChild(userMessageDiv);

					chatBox.scrollTop = chatBox.scrollHeight;
					messageInput.value = '';
					if (selectedChat.messages.length === 1) {
						greetingSection.classList.add('hidden');
					}

					messageCount++;

					/*
					if (messageCount > 5) {
						alertPopup.classList.remove('hidden');
					} */
					// Fetch the bot response
						try {
							const response = await fetch('/bot', {
								method: 'POST',
								headers: {
									'Content-Type': 'application/json',
									'Authorization': token_jwt
								},
								body: JSON.stringify({ 
									message: messageText, 
									token_jwt, 
									historyId: selectedChat.historyId 
								})
							});

							if (!response.ok) {
								console.error(`API error: ${response.status} ${response.statusText}`);
								throw new Error(`API error: ${response.status}`);
							}

							const data = await response.json();
							const botResponse = data.response || 'Maaf, terjadi kesalahan dalam mendapatkan respons dari server.';

							const botMessage = {
								sender: 'bot',
								text: botResponse
							};
							selectedChat.messages.push(botMessage);

							// Render the bot's message
							const botMessageDiv = document.createElement('div');
							botMessageDiv.classList.add('bg-[#2b2b2b]', 'text-[#e0e0e0]', 'self-start', 'text-justify', 'leading-relaxed', 'max-w-xl', 'p-4', 'rounded-md', 'w-fit', 'shadow-xl', 'mb-3');
							botMessageDiv.textContent = botResponse;
							chatBox.appendChild(botMessageDiv);

							chatBox.scrollTop = chatBox.scrollHeight; // Auto-scroll
						} catch (error) {
							console.error('Error fetching API:', error);

							// Display error message
							const errorDiv = document.createElement('div');
							errorDiv.classList.add('bg-red-500', 'text-white', 'self-start', 'text-justify', 'leading-relaxed', 'max-w-xl', 'p-4', 'rounded-md', 'w-fit', 'shadow-lg', 'mb-3');
							errorDiv.textContent = 'Maaf, terjadi kesalahan saat menghubungi server.';
							chatBox.appendChild(errorDiv);

							chatBox.scrollTop = chatBox.scrollHeight; // Auto-scroll
						}
				}
				chatRecomSection.addEventListener('click', function (e) {
					const chatItem = e.target.closest('.chat-recom-item');
					if (chatItem) {
						const messageText = chatItem.getAttribute('data-message');
						sendMessage(messageText);
					}
				});

				// Event listener untuk tombol New Chat dan kirim pesan
				newChatBtn.addEventListener('click', function () {
					createNewChat()
				});
				sendBtn.addEventListener('click', function () {
					sendMessage();
				});
				messageInput.addEventListener('keypress', function (e) {
					if (e.key === 'Enter') {
						sendMessage();
					}
				});

				// Inisialisasi dengan chat pertama
				renderChatList();
				switchToChat(0);
			});
		</script>
