    <script>
        // Function to initialize and toggle dark mode
        function initMode() {
            if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        }

        function toggleMode() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
                setActiveLink();
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
                setActiveLink();
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('default-modal');
            const closeModalBtn = document.getElementById('close-modal-btn');
            const ytVideo = document.querySelector('iframe');
            const originalSrc = ytVideo.src;

            function openModal() {
                modal.classList.remove('hidden');
                ytVideo.src = originalSrc; 
            }
            closeModalBtn.addEventListener('click', function () {
                modal.classList.add('hidden');
                ytVideo.src = ''; 
            });
            window.addEventListener('click', function (event) {
                if (event.target === modal) {
                modal.classList.add('hidden');
                ytVideo.src = ''; 
                }
            });
            const openModalBtn = document.querySelector('[data-modal-target="default-modal"]');
            openModalBtn.addEventListener('click', openModal);

        });
    </script>
