    <script>
      const btnSubmit = document.getElementById('forgot-password-submit')

      document.getElementById('forgot-password-form').addEventListener('submit', async function (event) {
        event.preventDefault();
        const email = document.getElementById('forgot-password-email').value;

        if (!email) {
          Swal.fire({
						text: "Pos-el harus diisi.",
						icon: "warning"
					});
          return;
        }
    
        const data = {
          email: email,
        };
                
        try {
          const response = await fetch('/forgot-password-post', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          });
          if (response.ok) {
            const responseData = await response.json();
            Swal.fire({
              text: "Tautan berhasil dikirim",
              icon: "success"
            });
            btnSubmit.style.display = 'none';
          } else {
            console.error('Response error:', response);
            const errorData = await response.json();
            Swal.fire({
              text: 'Masuk gagal: ' + (errorData.message || 'Kesalahan tidak diketahui.'),
              icon: "error"
            });
          }
        } catch (error) {
          Swal.fire({
						text: "Terjadi kesalahan, coba lagi nanti.",
						icon: "error"
					});
        }
      });
    </script>    
