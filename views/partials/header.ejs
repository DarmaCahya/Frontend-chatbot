    <script>
        function checkDark() {
			const theme = localStorage.getItem('theme');
			const checkbox = document.getElementById('darkModeToggle');

			if (theme === 'dark') {
			document.documentElement.classList.add('dark');
			if(checkbox) checkbox.checked = true;
			} else {
			document.documentElement.classList.remove('dark');
			if(checkbox) checkbox.checked = false;
			}
		};
        function toggleMode() {
			const isDarkMode = document.documentElement.classList.toggle('dark');
			
			// Update localStorage with the user's preference
			localStorage.setItem('theme', isDarkMode ? 'dark' : 'light');

			// Also update the checkbox based on the mode
            document.addEventListener("DOMContentLoaded", function() {
                document.getElementById('darkModeToggle').checked = isDarkMode;
            });
		}

		// On page load, apply the saved theme from localStorage and sync the toggle
		window.onload = () => {
			checkDark();
			const checkbox = document.getElementById('darkModeToggle');
			if(checkbox) checkbox.checked = document.documentElement.classList.contains('dark');
		}; 


        //Dark Q
        function applyTheme() {
            const theme = localStorage.getItem('theme') || 'light';  // Default to 'light' if not set

            const iconLight = document.getElementById('icon-light');
            const iconDark = document.getElementById('icon-dark');

            if (theme === 'dark') {
                console.log('Dark theme applied');
                document.addEventListener("DOMContentLoaded", function() {
                    document.getElementById('icon-light').style.display = 'none';
                    document.getElementById('icon-dark').style.display = 'inline';
                });
            } else {
                console.log('Light theme applied');
                document.addEventListener("DOMContentLoaded", function() {
                    document.getElementById('icon-light').style.display = 'inline';
                    document.getElementById('icon-dark').style.display = 'none';
                });
            }
        }

        // Toggle between dark and light theme
        function toggleTheme() {
            const currentTheme = localStorage.getItem('theme') || 'light';  // Default to 'light'
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            localStorage.setItem('theme', newTheme);
            applyTheme();
        }

        // Add event listener to the button
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById('theme-toggle-btn').addEventListener('click', toggleTheme);
        });
        // Apply theme on page load
        document.addEventListener('DOMContentLoaded', applyTheme);
    </script>

